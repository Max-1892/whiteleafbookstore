<?xml version="1.0" encoding="UTF-8"?>
<web-app
    version="3.1"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ViewAuthorServlet</servlet-name>
        <servlet-class>com.whiteleaf.database.test.ViewAuthorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCategoryServlet</servlet-name>
        <servlet-class>com.whiteleaf.database.test.ViewCategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPublisherServlet</servlet-name>
        <servlet-class>com.whiteleaf.database.test.ViewPublisherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewAuthorServlet</servlet-name>
        <url-pattern>/ViewAuthorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCategoryServlet</servlet-name>
        <url-pattern>/ViewCategoryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPublisherServlet</servlet-name>
        <url-pattern>/ViewPublisherServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>DB connection</description>
        <res-ref-name>jdbc/whiteleaf</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
